<div class="card">
<%= form_with(model: [@post, @post.comments.build ], local: true) do |form| %>
  <div class="card-header">
      <% if user_signed_in? %>
      <%= form.hidden_field :commenter, :value =>  current_user.real_name %>
      <% else %>
      <%= form.hidden_field :commenter, :value => 'Guest' %>
      <% end %>
    <h5>
        <%= form.label 'Say something horrible about this post' %>
    </h5>
  </div>
  <div style="padding: 15px;">
  <div class="form-group" >
  <%= form.text_area :content, :id => "comment"%>
  </div>
  <%= form.submit "Submit", :class => "btn btn-primary" %>
</div>
<% end %>
</div>
